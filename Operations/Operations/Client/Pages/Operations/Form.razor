@page "/operationss"
@inject HttpClient client
@using Operations.Shared.Models
@using System.Net.Http.Json 
@using Microsoft.JSInterop
@inject NavigationManager NavigationManager
@inject IJSRuntime js

<h3>Form</h3>
<EditForm Model="@ope" OnValidSubmit="@OnValidSubmit">
    <DataAnnotationsValidator />
    <div class="form-group">
        <label>Name :</label>
        <div>
            <InputText @bind-Value="@ope.Name" />
            <ValidationMessage For="@(() => ope.Name)" />
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Order to Perform:</label>
            <div>
                <InputText @bind-Value="@ope.OrderToPerform" />
                <ValidationMessage For="@(() => ope.OrderToPerform)" />
            </div>
        </div>
    </div>
    <div class="form-group ">
        <div>
            <label>Image data:</label>
            <div>
                <InputText @bind-Value="@ope.ImageData" />
                <ValidationMessage For="@(() => ope.ImageData)" />
            </div>
        </div>
    </div>
     <div class="form-group ">
        <div>
            <label>Device :</label>
            <div>
                <InputNumber @bind-Value="@ope.Device" />
                <ValidationMessage For="@(() => ope.Device)" />
            </div>
        </div>
    </div>
    <button type="submit" class="btn btn-success">
        @ButtonText
    </button>
</EditForm>
@code {

    [Parameter] public Operationss ope {get;set;}
    [Parameter] public string ButtonText { get; set; } = "Save";
    [Parameter] public EventCallback OnValidSubmit{ get; set; }


}
